<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forms.TambahDataAnakActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/root">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_arrow_back_ios_new_24"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tambah_data_anak"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="@id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/image_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boy_default"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="@id/btn_back"
            app:layout_constraintEnd_toStartOf="@id/image_girl"/>

        <TextView
            android:id="@+id/image_boy_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/laki_laki"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image_boy"
            app:layout_constraintStart_toStartOf="@id/image_boy"
            app:layout_constraintEnd_toEndOf="@id/image_boy"/>

        <ImageView
            android:id="@+id/image_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl_default"
            app:layout_constraintTop_toTopOf="@id/image_boy"
            app:layout_constraintStart_toEndOf="@id/image_boy"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/image_girl_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perempuan"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image_girl"
            app:layout_constraintStart_toStartOf="@id/image_girl"
            app:layout_constraintEnd_toEndOf="@id/image_girl"/>

        <TextView
            android:id="@+id/child_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image_boy_desc"
            app:layout_constraintStart_toStartOf="@id/btn_back" />

        <EditText
            android:id="@+id/child_name_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_form_add_child"
            android:hint="Masukkan nama anak"
            android:padding="10dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/child_name_title"
            app:layout_constraintStart_toStartOf="@id/child_name_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/child_nickname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_panggilan"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/child_name_field"
            app:layout_constraintStart_toStartOf="@id/btn_back" />

        <EditText
            android:id="@+id/child_nickname_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_form_add_child"
            android:hint="Masukkan nama panggilan anak"
            android:padding="10dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/child_nickname_title"
            app:layout_constraintStart_toStartOf="@id/child_nickname_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/birth_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tanggal_lahir"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/child_nickname_field"
            app:layout_constraintStart_toStartOf="@id/btn_back" />

        <EditText
            android:id="@+id/birth_date_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_form_add_child"
            android:hint="Masukkan tanggal lahir"
            android:padding="10dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/birth_date_title"
            app:layout_constraintStart_toStartOf="@id/birth_date_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/height_body_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi Badan (cm)"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/birth_date_field"
            app:layout_constraintStart_toStartOf="@id/btn_back" />

        <EditText
            android:id="@+id/height_body_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_form_add_child"
            android:hint="Masukkan tinggi anak"
            android:padding="10dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/height_body_title"
            app:layout_constraintStart_toStartOf="@id/height_body_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/weight_body_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat Badan (kg)"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/height_body_field"
            app:layout_constraintStart_toStartOf="@id/btn_back" />

        <EditText
            android:id="@+id/weight_body_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_form_add_child"
            android:hint="Masukkan berat anak"
            android:padding="10dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/weight_body_title"
            app:layout_constraintStart_toStartOf="@id/weight_body_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/head_circumference_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lingkar Kepala"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/weight_body_field"
            app:layout_constraintStart_toStartOf="@id/btn_back" />

        <EditText
            android:id="@+id/head_circumference_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_form_add_child"
            android:hint="Masukkan lingkar kepala"
            android:padding="10dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/head_circumference_title"
            app:layout_constraintStart_toStartOf="@id/head_circumference_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_add_child"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tambahkan_anak"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginBottom="80dp"
            app:layout_constraintTop_toBottomOf="@id/head_circumference_field"
            app:layout_constraintStart_toStartOf="@id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>