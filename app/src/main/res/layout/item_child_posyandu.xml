<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_child_posyandu_root"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_child_posyandu_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/child_image_example"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/item_child_posyandu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sutejo Goodman"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/item_child_posyandu_image"
            app:layout_constraintStart_toEndOf="@id/item_child_posyandu_image"/>

        <TextView
            android:id="@+id/item_child_posyandu_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 tahun 1 bulan"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/item_child_posyandu_name"
            app:layout_constraintStart_toStartOf="@id/item_child_posyandu_name"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_child_posyandu_height_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#F19D9F"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/item_child_posyandu_age"
            app:layout_constraintStart_toStartOf="@id/item_child_posyandu_age">

            <TextView
                android:id="@+id/item_child_posyandu_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendek"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_child_posyandu_condition_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#62BD2A"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/item_child_posyandu_height_card"
            app:layout_constraintStart_toEndOf="@id/item_child_posyandu_height_card">

            <TextView
                android:id="@+id/item_child_posyandu_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_child_posyandu_desease_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:backgroundTint="#DCBE1E"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/item_child_posyandu_condition_card"
            app:layout_constraintStart_toEndOf="@id/item_child_posyandu_condition_card">

            <TextView
                android:id="@+id/item_child_posyandu_desease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendek"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>