<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/item_article_thumb"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/article_image_example"
        android:scaleType="centerCrop"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="999dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@id/item_article_title"
            app:layout_constraintStart_toStartOf="@id/item_article_title">

            <TextView
                android:id="@+id/item_article_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balita"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tantrum Bisa berlangsung sampai dewasa, cegah denga ini dari"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:layout_marginStart="@dimen/root"
            android:layout_marginBottom="@dimen/root"
            android:layout_marginEnd="@dimen/root"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>