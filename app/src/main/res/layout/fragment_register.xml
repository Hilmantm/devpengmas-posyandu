<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.RegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/root">

            <LinearLayout
                android:id="@+id/telu_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/powered_by"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/primary_dark"
                    android:letterSpacing="0.09"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/telkom_university_logo"/>

            </LinearLayout>

            <TextView
                android:id="@+id/register_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daftar"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/telu_logo"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fullname"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/register_title"
                app:layout_constraintStart_toStartOf="@id/register_title"/>

            <EditText
                android:id="@+id/fullname_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_auth_input"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/fullname"
                app:layout_constraintStart_toStartOf="@id/register_title"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/fullname_field"
                app:layout_constraintStart_toStartOf="@id/register_title"/>

            <EditText
                android:id="@+id/email_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_auth_input"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintStart_toStartOf="@id/register_title"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/email_field"
                app:layout_constraintStart_toStartOf="@id/email_field"/>

            <EditText
                android:id="@+id/password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_auth_input"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:paddingEnd="10dp"
                android:drawablePadding="10dp"
                app:layout_constraintTop_toBottomOf="@id/password"
                app:layout_constraintStart_toStartOf="@id/register_title"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/desa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/password_field"
                app:layout_constraintStart_toStartOf="@id/password_field"/>

            <Spinner
                android:id="@+id/desa_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_auth_input"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:paddingEnd="10dp"
                android:drawablePadding="10dp"
                app:layout_constraintTop_toBottomOf="@id/desa"
                app:layout_constraintStart_toStartOf="@id/desa"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/posyandu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/desa_field"
                app:layout_constraintStart_toStartOf="@id/desa_field"/>

            <Spinner
                android:id="@+id/posyandu_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_auth_input"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:paddingEnd="10dp"
                android:drawablePadding="10dp"
                app:layout_constraintTop_toBottomOf="@id/posyandu"
                app:layout_constraintStart_toStartOf="@id/posyandu"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/daftar"
                android:backgroundTint="#AB191D"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginTop="37dp"
                app:layout_constraintStart_toStartOf="@id/register_title"
                app:layout_constraintEnd_toEndOf="@id/posyandu_field"
                app:layout_constraintTop_toBottomOf="@id/posyandu_field"/>

            <TextView
                android:id="@+id/sudah_punya_akun_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sudah_punya_akun"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/btn_register"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/login_to_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/masuk_disini"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:textColor="#15A4A4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sudah_punya_akun_text"
                app:layout_constraintStart_toStartOf="@id/sudah_punya_akun_text"
                app:layout_constraintEnd_toEndOf="@id/sudah_punya_akun_text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>