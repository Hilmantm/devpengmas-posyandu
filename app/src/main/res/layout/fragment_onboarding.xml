<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.OnboardingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/onboarding_illustration"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/onboarding_1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/onboarding_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/root"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/root"
            android:maxLines="3"
            android:text="Lihat Perkembangan Buah Hati Anda Secara Digital asdas asdasd asd asd a"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>