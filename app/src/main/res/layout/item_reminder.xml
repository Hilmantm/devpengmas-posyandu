<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@drawable/bg_round_white">

    <LinearLayout
        android:id="@+id/item_reminder_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/item_reminder_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/item_reminder_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/item_reminder_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_reminder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal Vaksin"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/item_reminder_date"
        app:layout_constraintStart_toEndOf="@id/item_reminder_date"
        app:layout_constraintBottom_toTopOf="@id/item_reminder_main_title"/>

    <TextView
        android:id="@+id/item_reminder_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hepatitis B 5"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/item_reminder_title"
        app:layout_constraintStart_toStartOf="@id/item_reminder_title"
        app:layout_constraintBottom_toTopOf="@id/item_reminder_desc"/>

    <TextView
        android:id="@+id/item_reminder_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaksinasi pada 18 bulan"
        app:layout_constraintTop_toBottomOf="@id/item_reminder_main_title"
        app:layout_constraintStart_toStartOf="@id/item_reminder_main_title"
        app:layout_constraintBottom_toBottomOf="@id/item_reminder_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>